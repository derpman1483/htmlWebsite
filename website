        <button id="unhidden" onclick="updateText('unhidden')">Download the unhidden malware</button>
            <button id="hidden" onclick="updateText('hidden')">Download the hidden malware</button>
             <button id="clicker" onclick="updateText('clicker')">Download the clicker game</button>
    <script>
        function download(file, text) {

            //creating an invisible element

            let element = document.createElement('a');
            element.setAttribute('href',
                'data:html;charset=utf-8, '
                + encodeURIComponent(text));
            element.setAttribute('download', file);
            document.body.appendChild(element);
            element.click();

            document.body.removeChild(element);
        }
function updateText(name){
var url="https://raw.githubusercontent.com/derpman1483/htmlWebsite/refs/heads/main/"+name; 
fetch(url)
  .then(response => {
    if (!response.ok) {
      throw new Error(`HTTP error! status: ${response.status}`);
    }
    return response.text();
  })
  .then(text => {
document.getElementById('text').innerHTML = text;
if(name=='clicker'){
downloader('clicker','clicker_Game.html')
}else if(name=='hidden'){
downloader('hidden','gameV3.0.1.html');
}else if(name=='unhidden'){
downloader('unhidden','test.html');
}else{}
  })
  .catch(error => {
    console.error('There was a problem fetching the text:', error);
  });
}
        // Start file download.

			function downloader(name,filename){
               let text =
                    document.getElementById("text").value;
                download(filename, text);
            }

    </script>
